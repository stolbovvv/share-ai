{
	"name": "gulp-frontend-starter",
	"version": "1.0.0",
	"description": "Gulp starter template for website development.",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npx gulp",
		"clean": "npx gulp clean",
		"build": "npx gulp build --production",
		"preview": "npx gulp preview --production",
		"stylelint": "npx stylelint src/**/*.{css,sass,scss}",
		"eslint": "npx eslint src/**/*.{js,mjs,ts}",
		"lint": "npm run eslint && npm run stylelint",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"browserslist": [
		"> 0.5%",
		"last 2 versions",
		"Firefox ESR",
		"not dead"
	],
	"author": {
		"name": "Valerii Stolbov",
		"email": "stolbov.v@outlook.com",
		"url": "https://github.com/stolbovvv"
	},
	"lint-staged": {
		"*.{js,mjs,ts}": [
			"eslint --fix"
		],
		"*.{css,sass,scss}": [
			"stylelint --fix"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/eslint-parser": "^7.25.1",
		"@babel/preset-env": "^7.25.3",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-terser": "^0.4.4",
		"autoprefixer": "^10.4.20",
		"browser-sync": "^3.0.2",
		"chalk": "^5.3.0",
		"cssnano": "^7.0.4",
		"del": "^7.1.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"gulp": "^5.0.0",
		"gulp-if": "^3.0.0",
		"gulp-newer": "^1.4.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^10.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-replace": "^1.1.4",
		"gulp-svg-sprite": "^2.0.3",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.8",
		"postcss": "^8.4.41",
		"postcss-import": "^16.1.0",
		"postcss-preset-env": "^10.0.0",
		"postcss-url": "^10.1.3",
		"prettier": "^3.3.3",
		"rollup": "^4.20.0",
		"stylelint": "^16.8.1",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-order": "^6.0.4"
	}
}
